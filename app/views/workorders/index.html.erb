<%- model_class = Workorder -%>
<div class="page-header">
  <h1><%=t '.title', :default => Workorder %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:work_status) %></th>
      <th><%= model_class.human_attribute_name(:customer_id) %></th>
      <th><%= model_class.human_attribute_name(:store_id) %></th>
      <th><%= model_class.human_attribute_name(:check_in_by) %></th>
      <th><%= model_class.human_attribute_name(:test_by) %></th>
      <th><%= model_class.human_attribute_name(:finish_by) %></th>
      <th><%= model_class.human_attribute_name(:take_posession_after) %></th>
      <th><%= model_class.human_attribute_name(:paid_diaganostic_fee) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @workorders.each do |workorder| %>
      <tr>
        <td><%= workorder.id %></td>
        <td><%= workorder.work_status %></td>
        <td><%= workorder.customer_id %></td>
        <td><%= workorder.store_id %></td>
        <td><%= workorder.check_in_by %></td>
        <td><%= workorder.test_by %></td>
        <td><%= workorder.finish_by %></td>
        <td><%= workorder.take_posession_after %></td>
        <td><%= workorder.paid_diaganostic_fee %></td>
        <td><%=l workorder.created_at, format: :long %></td>
        <td>
          <%= link_to workorder_path(workorder), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to workorder_path(workorder), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_workorder_path,
            :class => 'btn btn-primary' %>
